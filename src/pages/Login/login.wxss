.login {
  width: 100%;
  height: 100%;
  background-image: url('images//bg.jpg');
  background-size: 100% 100%;
}
.login .header {
  height: 90px;
  background-color: rgba(21, 20, 13, 0.5);
  display: flex;
  align-items: center;
}
.login .header .img {
  margin: 0 40px 10px;
  width: 40px;
  height: 40px;
}
.login .header h2 {
  font-weight: 700;
  color: #fff;
  font-size: 30px;
}
.login .content {
  padding: 10px 60px;
  width: 400px;
  height: 300px;
  margin: 60px auto;
  background-color: #fff;
}
.login .content h3 {
  font-size: 24px;
  font-weight: 700;
  text-align: center;
}
.login .content .login-form {
  margin-top: 30px;
}
.login .content .login-form .login-form-button {
  width: 100%;
}
